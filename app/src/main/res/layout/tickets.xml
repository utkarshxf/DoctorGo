<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context="com.example.orion.doctorgo.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4pt"
            android:background="@drawable/button"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/nametvX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"

                android:background="@drawable/gender"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Name"
                android:textColor="#424242"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctors_idX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/genderselected"
                android:fontFamily="@font/poppins"
                android:paddingLeft="10pt">

            </TextView>

            <TextView
                android:id="@+id/emailX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingLeft="10pt"
                android:text="TextView" />

            <TextView
                android:id="@+id/genderX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingLeft="10pt"
                android:text="TextView" />

            <TextView
                android:id="@+id/practice_frm_monthX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingLeft="10pt"
                android:text="TextView" />

            <TextView
                android:id="@+id/practice_frm_yearX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingLeft="10pt"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>
</layout>